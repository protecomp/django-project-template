[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    dc = diff --cached
    lg = log -p
    ll = log --graph --decorate --pretty=oneline --abbrev-commit
    lla = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files
[push]
    default = matching
